 #!/bin/bash
 
#ffmpeg -i "$1" -b:v 1500k -bufsize 1500k -ar 44100 -c:v h264_nvenc -s 1280x720 -vf "fps=fps=30" -b:a 128k "$2"
ffmpeg -i "$1" -b:v 690k -bufsize 690k -ar 44100 -c:v h264_nvenc -s 1280x720 -vf "fps=fps=30" -b:a 128k "$2"

echo -------------------------------------------------------
echo "in: $1";
echo "out: $2";
ffp "$2"

